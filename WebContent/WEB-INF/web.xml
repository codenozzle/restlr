<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Restful Web Application</display-name>

	<servlet>
        <servlet-name>com.codenozzle.app.RestApp</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
 
        <!-- Register JAX-RS Application, if needed. -->
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.codenozzle.app.RestApp</param-value>
        </init-param>
 
        <!-- Register resources and providers under com.codenozzle.api -->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.codenozzle.api</param-value>
        </init-param>
 
        <!-- Enable Tracing support. -->
        <init-param>
            <param-name>jersey.config.server.tracing</param-name>
            <param-value>ALL</param-value>
        </init-param>
 
        <load-on-startup>1</load-on-startup>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>com.codenozzle.app.RestApp</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
</web-app>